.fadeAnimate {
    -webkit-transition: .8s ease-in-out;

}
.fadeAnimate.ng-enter {
    opacity: 0;
}
.fadeAnimate.ng-leave {
    opacity: 1;
}
.fadeAnimate.ng-enter.ng-enter-active {
    opacity: 1;
}
.fadeAnimate.ng-leave.ng-leave-active {
    opacity: 0;
}


.fadeAnimate.fast
    -webkit-transition: .2s ease-in-out;


.fadeIn {
    animation: fadein 0.2s ease-in-out;
    -moz-animation: fadein 0.2s ease-in-out; /* Firefox */
    -webkit-animation: fadein 0.2s ease-in-out; /* Safari and Chrome */
    -o-animation: fadein 0.2s ease-in-out; /* Opera */
}
@keyframes fadein {
    from {
        opacity:0;
    }
    to {
        opacity:1;
    }
}
@-moz-keyframes fadein { /* Firefox */
    from {
        opacity:0;
    }
    to {
        opacity:1;
    }
}
@-webkit-keyframes fadein { /* Safari and Chrome */
    from {
        opacity:0;
    }
    to {
        opacity:1;
    }
}
@-o-keyframes fadein { /* Opera */
    from {
        opacity:0;
    }
    to {
        opacity: 1;
    }
}

.fadeIn.slow
    animation: fadein 0.8s ease-in-out;
    -moz-animation: fadein 0.8s ease-in-out; /* Firefox */
    -webkit-animation: fadein 0.8s ease-in-out; /* Safari and Chrome */
    -o-animation: fadein 0.8s ease-in-out; /* Opera */