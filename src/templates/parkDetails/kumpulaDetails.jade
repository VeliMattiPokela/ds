                    p 13:55
                        span.strong #{""} Anonyymi #{""}
                        span.fa.fa-venus
                    p 13:52
                        span.strong #{""} Cico (Mopsi) #{""}
                        span.fa.fa-mars
            .row
                .mainDetailsColumn.left
                    img.center(src="img/dogIcon.png")
                .mainDetailsColumn.right
                    h4.bonus Isoja koiria (2)
                    p 14:05
                        span.strong #{""} Bongo (Venäjänvinttikoira) #{""}
                        span.fa.fa-venus
                    p 13:55
                        span.strong #{""} Miisu (Puolanvinttikoira) #{""}
                        span.fa.fa-venus
                        span.fa.fa-star.notify



    .mainDetails.history
        .mainDetailsHeading
            h3 Edelliset kävijät
        .mainDetailsColumn.history
            p 12.12.2015 12:00
            p.strong #{""} Miisu (Puolanvinttikoira) #{""}
                span.fa.fa-venus


